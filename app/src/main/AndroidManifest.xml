<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.efficom.ppe4">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Ppe4">
        <activity android:name=".activities.ReservationInfoActivity"></activity>
        <activity android:name=".activities.PaymentActivity" />
        <activity android:name=".activities.TerminalReservationActivity" />
        <activity android:name=".activities.AccountActivity" />
        <activity android:name=".activities.ReservationsListActivity" />
        <activity android:name=".activities.TerminalSelectionActivity" />
        <activity android:name=".activities.AddReservation" />
        <activity android:name=".activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>